programa
{
	
	funcao inicio()
	{
		inteiro j = 0, i, c, n

		escreva("Informe o numero de dias: ")
		leia(n)

		para (c = 1; c <= n; c++){
			
			escreva("\nInforme um Número de acessos: ")
			leia(i)
			
			j += eu

			se (j>= 1.000.000)
				aparar
		}
		escreva("\nForam disputa ", c, " dias para ganhar o prêmio!")
	}
}
